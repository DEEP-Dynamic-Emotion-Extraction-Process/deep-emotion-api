# .env - Ambiente 1: Totalmente Local
FLASK_CONFIG=development
SECRET_KEY=uma-chave-secreta-qualquer
JWT_SECRET_KEY=outra-chave-secreta-qualquer

# --- DB Local (Docker) ---
DB_USER=root
DB_PASSWORD=uma-senha-forte-para-o-db-local # Invente uma senha
DB_HOST=db
DB_PORT=3306
DB_NAME=deep_local
DATABASE_URL=mysql+pymysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# --- Celery Local (Docker) ---
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# --- Armazenamento Local ---
STORAGE_TYPE=local # Crucial para usar o armazenamento local

# --- Credenciais AWS (não são necessárias aqui) ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_VIDEOS_BUCKET=
S3_MODELS_BUCKET=



# .env - Ambiente 2: DB no RDS
FLASK_CONFIG=development
SECRET_KEY=uma-chave-secreta-qualquer
JWT_SECRET_KEY=outra-chave-secreta-qualquer

# --- DB Remoto (AWS RDS) ---
DB_USER=admin
DB_PASSWORD=SUA_SENHA_DO_RDS # Substitua pela sua senha
DB_HOST=database-1.c3eig06ismxo.us-east-1.rds.amazonaws.com
DB_PORT=3306
DB_NAME=deep # Ou o nome do seu DB no RDS
DATABASE_URL=mysql+pymysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# --- Celery e Armazenamento ainda são locais ---
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
STORAGE_TYPE=local

# --- Credenciais AWS (não são necessárias aqui) ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_VIDEOS_BUCKET=
S3_MODELS_BUCKET=



# .env - Ambiente 3: RDS + S3
# ... (Seção de DB do RDS igual ao Ambiente 2) ...
DATABASE_URL=mysql+pymysql://admin:SUA_SENHA_DO_RDS@database-1.c3eig06ismxo.us-east-1.rds.amazonaws.com/deep

# --- Celery ainda local ---
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# --- Armazenamento em Nuvem ---
STORAGE_TYPE=s3 # ATIVA O MODO S3

# --- Credenciais AWS ---
AWS_ACCESS_KEY_ID=SUA_CHAVE_DE_ACESSO
AWS_SECRET_ACCESS_KEY=SUA_CHAVE_SECRETA
AWS_REGION=us-east-1 # Ou a sua região
S3_VIDEOS_BUCKET=nome-do-seu-bucket-de-videos
S3_MODELS_BUCKET=nome-do-seu-bucket-de-modelos